<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="styles/main.css">


</head>

<body>
    <!-- today's pic -->
    <% if (locals.tdImage){ %>
        <div class="section" id="one" style="background-image:url('<%=tdImage %>')">
            <div class="content">
                <p> Today's Astronomy picture </p>
                <h2>
                    <%= tdTitle %>
                </h2>
                <h4>
                    <%= tdDate %>
                </h4>
                <p>
                    <%= tdExplanation %>
                </p>
            </div>
        </div>
        <% } %>

            <!-- birthday pic -->
            <div class="section" id="two" <% if (locals.bdImage){ %>
                style="background-image:url('<%=bdImage %>');"
                    <% } %>
                        >
                        <!-- input -->
                        <p>Enter your birthday to view the astronomy picture on that day</p>
                        <form action="/birthday" method="POST">
                            <label for="start">Your birthday:</label>
                            <input type="date" id="start" name="birthday" value="YYYY-MM-DD" min="1900-01-01"
                                max="2025-8-10" />
                            <input type="submit" value="Submit" class="btn btn-light">

                        </form>

                        <% if (locals.bdImage){ %>
                            <div class="content">
                                <h2>
                                    <%= bdTitle %>
                                </h2>
                                <h2>
                                    <%= bdDate %>
                                </h2>
                                <p>
                                    <%= bdExplanation %>
                                </p>
                            </div>
                            <% } %>

            </div>

            <div class="section" id="three">
                <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                    <input id="1" type="submit" value="curiosity" class="btn btn-light" formaction="/curiosity">
                    <input id="2" type="submit" value="opportunity" class="btn btn-light" formaction="/opportunity">
                    <input id="3" type="submit" value="spirit" class="btn btn-light" formaction="/spirit">
                </div>

                <% if (locals.roverPhotos ){ %>
                    <div class="section" id="four">
                        <div class="grid-images">
                            <% roverPhotos.forEach(p=> { %>
                                <figure>
                                    <img src="<%= p.img_src %>" alt="Rover photo" />
                                    <figcaption>Camera: <%= p.camera.full_name %>
                                    </figcaption>
                                </figure>
                                <% }) %>
                        </div>
                    </div>
                    <% } %>

            </div>

</body>

</html>